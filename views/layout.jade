    script.
        function logout() {
            var resp;

            fetch('logout', {
                method: 'POST',
                headers: {
                    'Accept': 'application/json, text/plain, */*',
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify( {logout : true } )
            })
            .then(response => response.json())
            .then(data => data.logout?mostrarLogout():mostrarLogout() )
            .catch(err => console.log("Err is: "+err));

        }
    script. 
     function changeLogout() {
        var bt1 = document.getElementById("my-account");
        var bt2 = document.getElementById("logout");
        
        var login = document.createElement("a");
        login.className = bt2.className;
        login.href = "login";
        login.textContent = "Login";

        bt1.textContent = "Sign up";
        bt1.href = "sign-up";

        bt2.parentNode.replaceChild(login, bt2);

     }
    
